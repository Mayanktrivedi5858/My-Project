@model IEnumerable<HappyTechCompany.Models.UserApplication>
@using HappyTechCompany.Models;
@{
    ViewBag.Title = "Home Page";
}
<h2>Application List</h2>
<span class="text-success">@TempData["EmailMessage"]</span>
<div class="row">
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SubmitterName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FeedbackSubmitted)
            </th>
            <th>
                Feedback
            </th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SubmitterName)
                </td>
                <td>
                    @(Convert.ToBoolean(item.FeedbackSubmitted) ? "Submitted" : "Not Submitted")
                </td>

                <td>
                    @if (!Convert.ToBoolean(item.FeedbackSubmitted))
                    {
                        if (Session["Username"].ToString().ToLower() == "admin")
                        {
                            <button onclick="SaveLink('@item.SubmitterName')" type="button" class="btn btn-info btn-sm" data-toggle="modal" data-target="#myModal">Submit Feedback</button>
                        }
                    }
                    else
                    {
                        <button onclick="ViewFeedback(@item.ID)">View Feedback</button>
                    }
                </td>
            </tr>
        }

    </table>
</div>

<div id="myModal" class="modal fade" role="dialog">
    <div class="modal-dialog">
        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Template List</h4>
            </div>
            <div id="TemplateBody" class="modal-body">
                Please select one template to continue.<br />
                @foreach (var info in (ViewBag.TemplateInfo as ICollection<Template>))
                {
                    <input id="template_@info.ID" type="radio" name="TemplateInfo" value="@info.ID" />
                    <label for="template_@info.ID">@info.Title</label><br />
                }
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                <a id="SubmitInfo" href="#" class="btn btn-default">Submit</a>
            </div>
        </div>
    </div>
</div>

@section scripts{
    <script>
        var UserDetail = "";
        function SaveLink(user) {
            UserDetail = user;
            $("#SubmitInfo").attr("href", "#");
            $("#SubmitInfo").attr("disabled", "disabled");
        }

        $('input[type=radio][name=TemplateInfo]').change(function () {
            $("#SubmitInfo").removeAttr("disabled");
            var GetTemplateId = $('input[name="TemplateInfo"]:checked').val();
            $("#SubmitInfo").attr("href", "/Home/Submit?id=" + GetTemplateId + "&user=" + UserDetail);
        });

        function ViewFeedback(id) {
            window.location.href = "/Home/ViewFeedback?id="+id;
        }
    </script>
}